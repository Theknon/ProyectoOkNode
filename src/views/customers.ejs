<%- include ('partials/_header')  %>

    <!-- <pre> <%= data[0].direccion %> </pre> -->
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Nombre</th>
                            <th>Direccion</th>
                            <th>Telefono</th>
                            <th class="align text-lg-center">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(data){ %>
                            <% for (var i = 0; i < data.length; i++){ %>
                                <tr>
                                    <td> <%= (i + 1) %></td>
                                    <td> <%= data[i].nombre %></td>
                                    <td> <%= data[i].direccion %></td>
                                    <td> <%= data[i].telefono %></td>
                                    <td>
                                         <!-- <%= data[i].id %> Sirve para seleccionar el id para borrar o actualizar -->
                                        <a href="/delete/ <%= data[i].id %>" class="btn btn-danger">Borrar</a> 
                                        <a href="/update/ <%= data[i].id %>" class="btn btn-info">Actualizar</a>
                                    </td>
                                </tr>  
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-ms-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST" >
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Nombre" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="direccion" placeholder="Direccion" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="telefono" placeholder="Telefono" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Nuevo Dato
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>