<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRUD Nodejs</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand">CRUD Node</a>
    </nav>
    <!-- <pre> <%= data[0].direccion %> </pre> -->
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>NÂ°</th>
                            <th>Nombre</th>
                            <th>Direccion</th>
                            <th>Telefono</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(data){ %>
                            <% for (var i = 0; i < data.length; i++){ %>
                                <tr>
                                    <td> <%= (i + 1) %></td>
                                    <td> <%= data[i].nombre %></td>
                                    <td> <%= data[i].direccion %></td>
                                    <td> <%= data[i].telefono %></td>
                                    <td>
                                        <a href="/delete/ <%= data[i].id %>" class="btn btn-danger">Borrar</a>
                                    </td>
                                </tr>  
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-ms-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST" >
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Nombre" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="direccion" placeholder="Direccion" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="text" name="telefono" placeholder="Telefono" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                Nuevo Comprador
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>